#!/bin/bash

msg="$1"
shift

for D in *; do
    if [ ! -f "${D}/.bsi" ]; then
      if [ -d "${D}" ] && [ -d "${D}/.git" ]; then

        cd "${D}"
        OUT=$(git status)

	if [[ "$OUT" != *"nothing to commit"* ]]; then
          git config credential.helper store

          git add --all
          git commit -m "$msg"
          git push $@

	  tput setaf 4

	  echo ""
          echo "Pushing from local '${D}' to origin"
	  echo ""

	  tput op

	fi

        cd ..
      fi
    fi
done
